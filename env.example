# Server
PORT=3001
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Single MongoDB connection (databases accessed via mongoose.connection.useDb())
# The connection will use useDb('webbackend') and useDb('mobilebackend') internally
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=1d
MOBILE_JWT_EXPIRES_IN=30d

# ============================================
# AGORA CONFIGURATION
# ============================================
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Brevo (formerly Sendinblue) API
BREVO_API_KEY=your_brevo_api_key

# OR Nodemailer SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@yourdomain.com

# For mobile email (can use same as above or different)
MOBILE_SENDER_EMAIL=noreply@yourdomain.com
SENDER_EMAIL=noreply@yourdomain.com

# ============================================
# APP URLS (for password reset emails)
# ============================================
WEB_APP_URL=http://localhost:3000
MOBILE_APP_SCHEME=vidcall

# ============================================
# SECURITY
# ============================================
COOKIE_SECRET=your_cookie_secret_here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081
